vertex {
	set object {
		float time;
		mat4 mvp;
	};

	in vec3 in_pos;
	in vec3 in_normal;
	in vec2 in_uv;

	out vec3 vtx_pos;
	out vec3 vtx_normal;

	void main(void)
	{
		//vec3 in_pos = vec3(2.3);
		//vec2 pos;
		gl_Position = object.mvp * vec4(in_pos, 1.0);
	}
}

fragment {
	set material {
		vec3 color;
		vec3 normal;
	};

	out vec3 screen_color;

	void main(void)
	{
		screen_color = material.color;
	}
}