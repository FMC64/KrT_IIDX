
render_pass render_passes::depth_to_fl : compute;

require vertex::p2;

vertex {
	void main(void)
	{
		gl_Position = vec4((in)pos, 0, 1.0);
	}
}

fragment {
	set fb {
		sampler2D depth_buffer;
	};

	out float depth_fl;

	void main(void)
	{
		(out)depth_fl = texture(fb.depth_buffer, gl_FragCoord.xy, 0).x;
	}
}