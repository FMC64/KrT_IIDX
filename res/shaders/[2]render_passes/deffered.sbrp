bgr8_srgb wsi_screen { store = store, out_layout = present_src_khr };
rbg8_srgb screen;
rgb8_unorm color;
rgb8_snorm normal;
d24_s8 depth_buffer { load = clear };

albedo {
	depth_stencil depth_buffer;

	out color;
	out normal;
}

lighting {
	in depth_buffer;
	out screen;

	resolve screen : wsi_screen;
}

[
	{
		albedo,
		lighting,

		color_attachment_output,
		fragment_shader,

		color_attachment_write,
		input_attachment_read
	}
]