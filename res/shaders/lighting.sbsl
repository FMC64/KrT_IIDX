
render_pass render_passes::deffered : lighting;

require vertex::p2;
vertex {
	void main(void)
	{
		gl_Position = vec4((in)pos, 0, 1.0);
	}
}

fragment {
	out vec3 wsi_screen;

	void main(void)
	{
		(out)wsi_screen = subpassLoad((in)color).xyz + vec3(abs(subpassLoad((in)depth_buffer).x - 0.5) / 2.0);
	}
}